include ../user/bot.jade                                              
                script.
                        $("div[id=title]").click(function(){
                                var num=$(this).attr("class");
                                var status=$("tr[class="+num+"]").attr("style");
                                if(status.match("none")){
                                        $("tr[class="+num+"]").css("display","table-row")
                                }else{
                                        $("tr[class="+num+"]").css("display","none")
                                }
                        })

