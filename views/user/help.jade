include ../user/top.jade
                link(rel='stylesheet',href='./css/faq.css')
               
                .faq
                        .faqtitle
                         h3 고객센터
                        .faqlist
                                table.faqtable
                                        thead
                                                tr
                                                        th 번호
                                                        th 제목
                                        tbody
                                                each fa,index in faq
                                                        tr
                                                                td: a(href='/helpread?num='+fa.fnum style="text-align:center;")=fa.fnum
                                                                td: a#faq(href='/helpread?num='+fa.fnum style="text-align:center;")=fa.ftitle
                                                        tr(style="display: none" class=index)
                                                                td#faqtext(colspan="2" data-text=fa.ftext)
                                                                script.
                                                                        var html=$("td[id=faqtext]")[#{index}].dataset.text;
                                                                        $("td[id=faqtext]")[#{index}].innerHTML=html;
                .write 
